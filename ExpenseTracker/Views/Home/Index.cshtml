@{
    ViewData["Title"] = "Home Page";
}

<div class="tracker-body container">
    <div class="container">
        <div class="balance">
            <h4>Your Balance</h4>
            <h1 id="balance">0.00</h1>
        </div>

        <div class="inc-exp-container">
            <div>
                <h4>Income</h4>
                <p id="money-plus" class="money plus">+$0.00</p>
            </div>
            <div>
                <h4>Expense</h4>
                <p id="money-minus" class="money minus">-$0.00</p>
            </div>
        </div>

        <div class="button">
            <button id="btn-income" class="btn btn-success" onclick="showIncomeSubmitForm()">Add Income</button>
            <button id="btn-expense" class="btn btn-danger" onclick="showExpenseSubmitForm()">Add Expense</button>
        </div>

        <div id="incomeSubmitForm" class="add">
            <form id="income-form" method="post">
                <span onclick="closeForm()" class="close-btn"><i class="fa fa-times"></i></span>
                <div class="form-group">
                    <label for="income"></label>
                    <input type="text" id="income-from" placeholder="Enter income" class="form-control">
                    <small>Error message</small>
                </div>
                <div class="form-group">
                    <label for="value"></label>
                    <input type="number" id="income-value" placeholder="Enter value" class="form-control">
                    <small>Error message</small>
                </div>
                <div class="form-group">
                    <input onclick="sendRequest()" value="submit" class="btn btn-primary" readonly style="cursor:pointer;" />
                </div>

            </form>
        </div>
        <div id="expenseSubmitForm" class="add">
            <form id="expense-form" method="post">
                <span onclick="closeForm()" class="close-btn"><i class="fa fa-times"></i></span>
                <div class="form-group">
                    <label for="expense"></label>
                    <input type="text" id="expense-from" placeholder="Enter expense" class="form-control">
                    <small>Error message</small>
                </div>
                <div class="form-group">
                    <label for="value"></label>
                    <input type="number" id="expense-value" placeholder="Enter value" class="form-control">
                    <small>Error message</small>
                </div>
                <div class="form-group">
                    <input onclick="sendRequest()" value="submit" class="btn btn-primary" readonly style="cursor:pointer;" />
                </div>
            </form>
        </div>

        <div class="dropdown show">
            <a class="btn btn-secondary dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Show
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="#" onclick="getDailyIncomes()">daily incomes</a>
                <a class="dropdown-item" href="#" onclick="getAllIncomes()">all incomes</a>
                <a class="dropdown-item" href="#" onclick="getDailyExpenses()">daily expenses</a>
                <a class="dropdown-item" href="#" onclick="getAllExpenses()">all expenses</a>
                <a class="dropdown-item" href="#" onclick="dailyHistory()">daily history</a>
            </div>
        </div>
   
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Type</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody id="table">
                    
                </tbody>
            </table>
        </div>
    </div>
</div>